# =============================================================================
# KAIROS - Environment Variables
# =============================================================================
# Copy this file to .env and adjust values as needed
# cp .env.example .env
# =============================================================================

# =============================================================================
# POSTGRES DATABASE
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-super-secret-password-change-me
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# =============================================================================
# JWT / AUTH
# =============================================================================
# IMPORTANT: Change this in production! Must be at least 32 characters
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
JWT_EXP=3600

# =============================================================================
# SUPABASE URLS
# =============================================================================
API_EXTERNAL_URL=http://localhost:8000
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=

# =============================================================================
# AUTH SETTINGS
# =============================================================================
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true

# =============================================================================
# SMTP (Optional - for email verification)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@kairos.local

# =============================================================================
# POSTGREST
# =============================================================================
PGRST_PORT=3001
PGRST_DB_SCHEMAS=public,storage

# =============================================================================
# KONG API GATEWAY
# =============================================================================
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# =============================================================================
# AUTH PORT
# =============================================================================
AUTH_PORT=9999

# =============================================================================
# N8N WORKFLOW ENGINE
# =============================================================================
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=kairos2024

# =============================================================================
# OLLAMA (Local LLM)
# =============================================================================
OLLAMA_PORT=11434

# =============================================================================
# FRONTEND (NGINX)
# =============================================================================
FRONTEND_PORT=3000

# =============================================================================
# GENERAL
# =============================================================================
TIMEZONE=Europe/Paris
